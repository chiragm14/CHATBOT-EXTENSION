{
    "manifest_version": 3,
    "name": "Gemini Chatbot",
    "version": "1.0",
    "description": "A modern Gemini-powered chatbot",
    "action": {
        "default_title": "Open Gemini Chatbot"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "sidePanel"
    ],
    "host_permissions": [
        "https://generativelanguage.googleapis.com/"
    ],
    "side_panel": {
        "default_path": "index.html"
    },
    "icons": {
        "48": "icon.png"
    }
}
